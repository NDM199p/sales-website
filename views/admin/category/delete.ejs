<div class="container">
  <h1>Details</h1>

  <h4>Category</h4>
  <hr />
  <div class="row">
    <div class="col-sm-4">
      <div class="row">
        <div class="col">#:</div>
        <div class="col"><%= category._id%></div>
      </div>
      <div class="row">
        <div class="col">Name:</div>
        <div class="col"><%= category.name%></div>
      </div>
      <div class="row">
        <div class="col">Describe:</div>
        <div class="col"><%= category.describe%></div>
      </div>
      <div class="row">
        <div class="col">Image:</div>
        <div class="col"><%= category.image%></div>
      </div>
      <div class="row">
        <div class="col">Create Date:</div>
        <div class="col"><%= category.create_date%></div>
      </div>
    </div>
  </div>

  <br />
  <div>
    <form method="POST" action="/admin/category/delete">
      <input type="hidden" name="_id" value="<%= category._id%>" />
      <button class="btn btn-warring" type="submit">Delete</button>
    </form>

    <a href="">Back to list</a>
  </div>
</div>
